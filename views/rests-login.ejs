<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Checkout</title>
  </head>
  <body class="checkout-body">
    <%- include('partials/restNav') %>

    <header id="homepagehead">
      <div class="showcase">
        <h1>Welcome!</h1>
        <form class="form-inline" action="/api/restaurants/login" method="POST">
          <div class="form-group mb-2">
            <label for="email">Username:</label>
            <input
              class="form-control"
              type="email"
              name="email"
              placeholder="email"
              style="width: 300px; margin: 1em"
            />
            <label for="password">Password:</label>
            <input
              class="form-control"
              type="password"
              name="password"
              placeholder="password"
              style="width: 300px; margin: 1em"
            />
            <button type="submit" class="remove-btn">Log In</button>
          </div>
        </form>
      </div>
    </header>
  </body>
</html>
